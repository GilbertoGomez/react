.Card
	width 300px
	background #8a94b9
	border 5px solid black
	box-shadow 7px 9px 8px rgba(black,.8)
	border-radius .5em
	padding .5em
	position relative
	margin .5em
	
	&-container
		text-align center
		
	&-name
		color white
		margin 0 0 .5em 0
		font-size 2.5em
		display flex
		justify-content center
		white-space normal
		font-family 'Kavoon', cursive
		text-shadow 6px 5px 0px black
	
	&-image
		width  80%
		border-radius 50%
	
	&-description
		background #fff
		padding .8em
		font-size 16px
		margin .5em
		border 2px solid #000
		font-family 'Kavoon', cursive
		border-radius 25px
		color #253e79
		line-height 22px
		text-align justify