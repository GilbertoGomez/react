@font-face
	font-family: 'iconos';
	src:url('../fonts/icomoon.eot?-etyqoi');
	src:url('../fonts/icomoon.eot?#iefix-etyqoi') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-etyqoi') format('woff'),
		url('../fonts/icomoon.ttf?-etyqoi') format('truetype'),
		url('../fonts/icomoon.svg?-etyqoi#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;


.Principal
	display flex
	flex-wrap wrap
	height auto
	justify-content center

.show 
	display block !important
	opacity 1 !important 
	background-color rgba(0,0,0,0.8)
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	margin 0 !important
	z-index  999
	
#popup:target
	display block
	opacity 1
	background-color rgba(0,0,0,0.8)
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	margin 0
	z-index  999

#popup 
	display none
	opacity 0
	margin-top -300px
	
	.popup-contenedor 
		position relative
		margin 7% auto
		padding 30px 50px
		background-color  #fafafa
		color #333
		border-radius 10px
		width 50%
		 
	a.popup-cerrar 
		position absolute
		top 7px
		right 1px
		text-decoration none
		
.icon-cancel-circle
		color red
		font-size 35px
		padding 0.1em
		
		&:before
			font-family iconos
			content "\ea0d"
			
.text
	font-size 40px
	color black
	font-weight bold
	
.icon-sad
	color #fb4d08
	font-size 70px
	font-style normal
	padding 20px
	font-weight initial
		
	&:after
		font-family iconos
		content "\e9e5"